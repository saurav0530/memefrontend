<form action="/" method="post">
  <div class="mb-3">
    <label for="name" class="form-label">Meme Owner:</label>
    <input type="text" name="name" class="form-control" placeholder="Enter your full name">
  </div>
  <div class="mb-3">
    <label for="caption" class="form-label">Caption:</label>
    <input type="text" name="caption" class="form-control" placeholder="Be creative with the caption">
  </div>
  <div class="mb-3">
    <label for="imgURL" class="form-label">Meme URL:</label>
    <input type="text" name="imgURL" class="form-control" placeholder="Enter URL of your meme here">
  </div>
  <button type="submit" class="btn btn-success">Submit</button>
</form>